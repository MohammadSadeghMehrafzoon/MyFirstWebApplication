@model IEnumerable<WebApplicationFirst.Models.Projects>

		<section class="featured-section p-3 p-lg-5">
			<div class="container">
				<h2 class="section-title font-weight-bold mb-5">پروژه های من</h2>
				<div class="row">
					@foreach (var project in Model)
					{
						
						<div class="col-md-6 mb-5">
						<div class="card project-card">
							<div class="row no-gutters">
								<div class="col-lg-4 card-img-holder">
									<img src="~/assets/images/project/@project.Image" class="card-img" alt="@project.Image">
								</div>
								<div class="col-lg-8">
									<div class="card-body">
										<h5 class="card-title">

											<a asp-controller ="Home" asp-action="ProjectsDetails" asp-route-id ="@project.Id" class="theme-link" >
                                                 @project.Name
											</a>
											</h5>

										<p class="card-text">
											@project.Description
										</p>
										<p class="card-text" align="left" ><small class="text-muted"><a href="@project.Link" target="_blank">دانلود از بازار</a></small></p>
									</div>
								</div>
							</div>
						</div>
					</div>
					}
					
				</div>
			</div></section>
